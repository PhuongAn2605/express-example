extends ../layouts/common.pug

block content
	h2 Login

	if errors
		each error in errors
			.alert.alert-danger= error

	form(method="POST")
		.form-group
			label(for="email") Email
			input#email.form-control(type="text", name="email", value=values ? values.email : "")

		.form-group
			label(for="password") Password
			input#password.form-control(type="password", name="password", class="form-control mb-2", value= values ? values.password : "")
			button(class="btn-primary") Login