extends ../layouts/common.pug

block content
	h2 Create user

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create", method="POST", enctype="multipart/form-data")
		.form-group
			label(for="name") Name
			input#name.form-control(type="text", name="name", value=values ? values.name : "")

		.form-group
			label(for="phone") Phone
			input#phonel(type="number", name="phone", class="form-control mb-2", value= values ? values.phone : "")

		.form-group
			label(for="avatar") Avatar
			input#avatar.form-control-file(type="file", name="avatar")
			
		button(class="btn-primary") Create